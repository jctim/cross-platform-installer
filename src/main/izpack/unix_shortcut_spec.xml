<izpack:shortcuts version="5.0"
                  xmlns:izpack="http://izpack.org/schema/shortcuts"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://izpack.org/schema/shortcuts http://izpack.org/schema/5.0/izpack-shortcuts-5.0.xsd">

    <skipIfNotSupported/>
    <shortcut name="$APP_NAME"
              target="java -jar $INSTALL_PATH/$JAR_APP"
              workingDirectory="$INSTALL_PATH"
              desktop="yes"
              programGroup="no"
              applications="yes"
              startMenu="no"
              startup="no"
              type="Application">
        <createForPack name="$APP_NAME"/>
    </shortcut>

    <shortcut
            name="$APP_NAME Uninstaller"
            target="java -jar $INSTALL_PATH\Uninstaller\uninstaller.jar"
            desktop="no"
            programGroup="no"
            applications="yes"
            startMenu="no"
            startup="no"
            type="Application">
        <createForPack name="$APP_NAME"/>
    </shortcut>


</izpack:shortcuts>