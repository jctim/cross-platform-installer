<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.upwork.jctim</groupId>
    <artifactId>uw-cross-platfrom-installer</artifactId>

    <packaging>izpack-jar</packaging>

    <version>1.0-SNAPSHOT</version>
    <name>uw-cross-platfrom-installer</name>
    <url>http://maven.apache.org</url>

    <properties>
        <jdk.version>1.8</jdk.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

        <!-- this version doesn't fail uninstaller on Windows -->
        <maven.izpack.plugin.version>5.1.1</maven.izpack.plugin.version>

        <!-- Installer variables -->
        <staging.dir>${basedir}/assets</staging.dir>
        <izpack.dir.app>${basedir}/src/main/izpack</izpack.dir.app>
        <info.appName>StartApp</info.appName>
        <info.appVersion>1.0</info.appVersion>
        <info.appsubpath>com.upwork.jctim</info.appsubpath>
        <jar.name>start.jar</jar.name>
    </properties>

    <dependencies/>

    <build>
        <finalName>start</finalName>

        <plugins>
            <plugin>
                <groupId>org.codehaus.izpack</groupId>
                <artifactId>izpack-maven-plugin</artifactId>
                <version>${maven.izpack.plugin.version}</version>
                <extensions>true</extensions>
                <configuration>
                    <baseDir>${staging.dir}</baseDir>
                    <installFile>${izpack.dir.app}/install.xml</installFile>
                    <outputDirectory>${project.build.directory}</outputDirectory>
                    <finalName>${project.build.finalName}-installer</finalName>
                    <mkdirs>true</mkdirs>
                    <autoIncludeUrl>false</autoIncludeUrl>
                    <autoIncludeDevelopers>false</autoIncludeDevelopers>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
