<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.upwork.jctim</groupId>
    <artifactId>cross-platfrom-installer</artifactId>

    <packaging>jar</packaging>

    <version>1.0-SNAPSHOT</version>
    <name>cross-platfrom-installer</name>
    <url>http://maven.apache.org</url>

    <properties>
        <jdk.version>1.8</jdk.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

        <maven.compiler.plugin.version>3.8.1</maven.compiler.plugin.version>
        <maven.javapackager.plugin.version>0.9.4</maven.javapackager.plugin.version>

        <!-- Installer variables -->
        <staging.dir>${basedir}/staging</staging.dir>
        <assets.dir>${basedir}/assets</assets.dir>
        <info.appName>StartApp</info.appName>
        <info.appVersion>1.0</info.appVersion>
        <info.appsubpath>com.upwork.jctim</info.appsubpath>
        <runnable.jar.name>start.jar</runnable.jar.name>
        <javapackager.platform>auto</javapackager.platform>
    </properties>

    <build>
        <finalName>start</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${maven.compiler.plugin.version}</version>
                <configuration>
                    <source>${jdk.version}</source>
                    <target>${jdk.version}</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>io.github.fvarrui</groupId>
                <artifactId>javapackager</artifactId>
                <version>${maven.javapackager.plugin.version}</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>package</goal>
                        </goals>
                        <configuration>
                            <name>${info.appName}</name>
                            <displayName>${info.appName}</displayName>
                            <mainClass>com.upwork.jctim.DummyApp</mainClass>
                            <bundleJre>false</bundleJre> <!-- TODO true? -->
                            <generateInstaller>true</generateInstaller>
                            <administratorRequired>false</administratorRequired>
                            <platform>${javapackager.platform}</platform>
                            <runnableJar>${staging.dir}/${runnable.jar.name}</runnableJar>
                            <additionalResources>
                                <param>${staging.dir}/folder</param>
                            </additionalResources>
                            <licenseFile>${staging.dir}/licence.txt</licenseFile>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
