<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.upwork.jctim</groupId>
    <artifactId>cross-platfrom-installer</artifactId>

    <packaging>jar</packaging>

    <version>1.0-SNAPSHOT</version>
    <name>cross-platfrom-installer</name>
    <url>http://maven.apache.org</url>

    <properties>
        <jdk.version>1.8</jdk.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <exec.maven.plugin.version>1.6.0</exec.maven.plugin.version>

        <!-- Installer variables -->
        <assets.dir>${basedir}/assets</assets.dir>
        <app.name>MyGreatApp</app.name>
        <app.version>1.0</app.version>
        <app.subpath>com.upwork.jctim</app.subpath>
        <app.runnable.jar>start.jar</app.runnable.jar>
        <app.mainClass>com.upwork.jctim.App</app.mainClass>
        <app.resources.dir>folder</app.resources.dir>
        <app.licence>licence.txt</app.licence>
    </properties>

    <build>
        <finalName>${app.name}</finalName>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>${exec.maven.plugin.version}</version>
                <executions>
                    <!-- Deploy a native version -->
                    <execution>
                        <id>deploy</id>
                        <phase>package</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>javapackager</executable>
                            <arguments>
                                <argument>-deploy</argument>
                                <argument>-appclass</argument>
                                <argument>${app.mainClass}</argument>
                                <argument>-native</argument>
                                <argument>installer</argument>
                                <argument>-srcdir</argument>
                                <argument>${assets.dir}</argument>
                                <argument>-srcfiles</argument>
                                <argument>${app.runnable.jar}</argument>
                                <argument>-srcfiles</argument>
                                <argument>${app.resources.dir}</argument>
                                <argument>-srcfiles</argument>
                                <argument>${app.licence}</argument>
                                <argument>-outdir</argument>
                                <argument>${project.build.directory}/dist</argument>
                                <argument>-outfile</argument>
                                <argument>${app.name}-installer</argument>
                                <argument>-name</argument>
                                <argument>${app.name}</argument>
                                <argument>-nosign</argument>
                                <argument>-BappVersion=${app.version}</argument>
                                <argument>-BlicenseFile=${app.licence}</argument>
                                <!--                                <argument>-Bicon=${project.build.directory}/classes/${application.title}.ico</argument>-->
                                <!--                                <argument>-BappVersion=${project.version}</argument>-->
                                <!--                                <argument>-Bcopyright='2015 AutoAp, Inc.'</argument>-->
                                <!--                                <argument>-BshortcutHint=true</argument>-->
                                <!--                                <argument>-BsystemWide=false</argument>-->
                                <!--                                <argument>-Bwin.menuGroup=${organization.name}</argument>-->
                                <!--                                <argument>-Bvendor=${organization.name}</argument>-->
                                <!--                                <argument>-v</argument>-->
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
